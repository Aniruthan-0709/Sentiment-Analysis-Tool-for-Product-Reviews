name: Deploy to Cloud Run

on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout Code
      - name: Checkout Repository
        uses: actions/checkout@v3

      # Step 2: Authenticate with Google Cloud
      - name: Authenticate to Google Cloud
        uses: google-github-actions/auth@v2
        with:
          credentials_json: '${{ secrets.GCP_CREDENTIALS }}'

      # Step 3: Set up gcloud CLI
      - name: Set up Google Cloud SDK
        uses: google-github-actions/setup-gcloud@v1
        with:
          project_id: ${{ secrets.GCP_PROJECT_ID }}
          service_account_email: github-actions-deployer@civic-sunrise-448921-c2.iam.gserviceaccount.com

      # Step 4: Build Docker Image
      - name: Build Docker Image
        run: |
          gcloud builds submit --tag gcr.io/${{ secrets.GCP_PROJECT_ID }}/my-app

      # Step 5: Deploy to Cloud Run Job
      - name: Deploy Cloud Run Job
        run: |
          gcloud beta run jobs create load-data-job \
            --image=gcr.io/${{ secrets.GCP_PROJECT_ID }}/my-app \
            --region=us-central1 \
            --service-account=compute-engine-default@civic-sunrise-448921-c2.iam.gserviceaccount.com \
            --max-retries=3 \
            --memory=512Mi \
            --timeout=600s

      # Step 6: Execute Cloud Run Job
      - name: Execute Cloud Run Job
        run: |
          gcloud beta run jobs execute load-data-job \
            --region=us-central1 \
            --wait
